@{
    Layout = null;
    ViewBag.Title = "_Layout_User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, >
    <link rel=" shortcut icon" href="../../assets/ico/favicon.ico">
    <link rel="stylesheet" type="text/css" href="../Content/Сonverter.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <script src="../../assets/js/docs.min.js"></script>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>@ViewBag.Title</title>

    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="dashboard.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#"><img src=" ..\Image\logo.jpg" class="img-rounded" width="150" height="40" /></a>
                        <ul class="nav navbar-nav navbar-left">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("О сервисе", "AboutForUser", "Home")</li>
                            <li>@Html.ActionLink("Контакты", "ContactForUser", "Home")</li>
                        </ul>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Личный кабинет", "UserOrders", "Order")</li>
                            <li>@Html.ActionLink("Корзина", "ShowSelectedItem", "SelectedItem")</li>
                            <li>@Html.ActionLink("Log out", "Logout", "Account")</li>
                        </ul>                        
                    </div>
                </div>
            </div>
        </div><!--DIV row-->
        <div class="row">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-2 col-md-2 sidebar">
                        <h1>lllllllllllllllllllllllllllllllllll</h1>
                        <ul class="nav nav-pills nav-stacked">
                            <li class="active">
                                @Html.ActionLink("Каталог фильмов", "ListForUser", "Product")
                            </li>
                            <li>@Html.ActionLink("Мультипликация", "ListForUserByCategory", "Product", new { id = "Мультфильм" }, null)</li>                            
                            <li>@Html.ActionLink("Боевик", "ListForUserByCategory", "Product", new { id = "Боевик" }, null)</li>
                            <li>@Html.ActionLink("Детектив", "ListForUserByCategory", "Product", new { id = "Детектив" }, null)</li>
                            <li>@Html.ActionLink("Приключенческий", "ListForUserByCategory", "Product", new { id = "Приключенческий" }, null)</li>
                            <li>@Html.ActionLink("Фильм ужасов", "ListForUserByCategory", "Product", new { id = "Фильм ужасов" }, null)</li>
                            <li>@Html.ActionLink("Комедия", "ListForUserByCategory", "Product", new { id = "Комедия" }, null)</li>
                            <li>@Html.ActionLink("Драмма", "ListForUserByCategory", "Product", new { id = "Драмма" }, null)</li>
                            <li>@Html.ActionLink("Фантастика", "ListForUserByCategory", "Product", new { id = "Фантастика" }, null)</li>
                            <li>@Html.ActionLink("Мистика", "ListForUserByCategory", "Product", new { id = "Мистика" }, null)</li>
                            <li>@Html.ActionLink("Фентези", "ListForUserByCategory", "Product", new { id = "Фентези" }, null)</li>
                            <li>@Html.ActionLink("Биографический", "ListForUserByCategory", "Product", new { id = "Биографический" }, null)</li>
                            <li>@Html.ActionLink("Исторический", "ListForUserByCategory", "Product", new { id = "Исторический" }, null)</li>
                            <li>@Html.ActionLink("Семейный", "ListForUserByCategory", "Product", new { id = "Семейный" }, null)</li>
                            <li>@Html.ActionLink("Сказка", "ListForUserByCategory", "Product", new { id = "Сказка" }, null)</li>
                            <li>@Html.ActionLink("Документальный", "ListForUserByCategory", "Product", new { id = "Документальный" }, null)</li>
                            <li>@Html.ActionLink("Эротика", "ListForUserByCategory", "Product", new { id = "Эротика" }, null)</li>
                        </ul>
                    </div>
                    <h1>lllllllllllllllllllllllllllllllllll</h1>
                    <hr />
                    <div class="col-sm-10  col-md-10  ">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-9 col-md-9 ">
                                    @using (Html.BeginForm("ListForUser", "Product", FormMethod.Get, new{ @class = "input-medium search-query" }))
                                    {                                       
                                        <div class="form-group">
                                            @Html.TextBox("SearchString")
                                            <button type="submit" value="filter" class="add-on"><i class="icon-search"></i>Найти</button>                                            
                                        </div>                                    
                                    }                                     
                                </div>
                                <div class ="col-sm-3 col-md-3 ">
                                    <span>@ViewBag.UserName</span>
                                </div>
                            </div>
                            <div class="row">
                                @RenderBody()
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div><!--DIV row-->
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Видеопрокат</p>
    </footer>
</body>
</html>
